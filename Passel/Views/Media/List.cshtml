@model MediaViewModel
<div class="container">
	<h2>Add Content</h2>
	<p>Use the form below to add new content to your Passel account:</p>

	@using (Html.BeginForm("AddContent", "Content", FormMethod.Post))
	{
		<div class="row">
			<div class="col-sm-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Request an Application</h5>
						<div class="form-group">
							<label for="title">Title:</label>
							<input type="text" class="form-control" id="title"
							name="title" required>
						</div>
						<div class="form-group">
							<label for="description">Description:</label>
							<textarea class="form-control" id="description"
							name="description" rows="3" required></textarea>
						</div>
						<div class="form-group">
							<label for="link">Link:</label>
							<input type="text" class="form-control" id="link"
							name="link">
						</div>
						<button type="submit" class="btn btn-primary">Request
							Content</button>
					</div>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Media</h5>
						<div class="form-group">
							<label for="mediaType">Preview:</label>
							<p>This is just place holder text until the feature is
								implemented to show a preview of the feed.</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Add Media Source</h5>
						@foreach (var media in Model.Medias)
						{
							<div class="form-check">
								<input class="form-check-input" type="checkbox"
							value="@media.MediaID" id="media-@media.MediaID"
							name="categories">
								<label class="form-check-label"
							for="media-@media.MediaID">
									@media.MediaName
								</label>
							</div>
						}
					</div>
					<button type="submit" class="btn btn-primary">Add
						Content</button>
				</div>
			</div>
		</div>
	}

</div>